#!/usr/bin/env php
<?php

use Sami\Console\Application;

set_time_limit(0);

$paths = [
    __DIR__ . "/../autoload.php",
    __DIR__ . "/../vendor/autoload.php",
    __DIR__ . "/../../vendor/autoload.php",
    __DIR__ . "/../../../vendor/autoload.php",
    __DIR__ . "/../../../../vendor/autoload.php",
];

$included = false;

foreach ($paths as $path) {
    if (file_exists($path)) {
        require_once $path;
        $included = true;
		break;
    }
}

if (!$included) {
    throw new RuntimeException("What is Composer? Is a food?");
}

$application = new Application();
$application->run();
